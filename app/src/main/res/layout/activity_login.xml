<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:weightSum="1"
              android:layout_marginTop="0dp"
              android:gravity="center">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@mipmap/welcome_bg"
        android:id="@+id/relativeLayout"
        android:layout_gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/whitelogo"
            android:visibility="gone"/>

        <com.mycompany.mylight_up.EditTextWithDel
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_below="@+id/logo"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/darker_gray"
            android:hint="手机号码"
            android:maxLength="11"
            android:numeric="integer"
            android:textSize="16.0sp"
            android:background="@drawable/login_edit_bg"
            android:layout_alignStart="@+id/forgetpassword"
            android:layout_alignEnd="@+id/Login"
            android:visibility="gone"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"/>

        <com.mycompany.mylight_up.PassWordShow
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:password="true"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/darker_gray"
            android:hint="密码"
            android:textSize="16.0sp"
            android:singleLine="true"
            android:imeActionLabel="登陆"
            android:imeOptions="actionGo"
            android:background="@drawable/login_edit_bg"
            android:layout_alignStart="@+id/phone"
            android:layout_alignEnd="@+id/phone"
            android:visibility="gone"
            android:layout_below="@+id/phone"
            android:layout_alignParentStart="false"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="40dp"/>

        <com.mycompany.mylight_up.PassWordShow
            android:id="@+id/password2"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:password="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/password"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/darker_gray"
            android:hint="确认密码"
            android:textSize="16.0sp"
            android:singleLine="true"
            android:imeActionLabel="注册"
            android:imeOptions="actionGo"
            android:background="@drawable/login_edit_bg"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/forgetpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="忘记密码"
            android:textColor="@android:color/white"
            android:textSize="16.0sp"
            android:layout_marginTop="20dp"
            android:layout_alignParentStart="false"
            android:visibility="gone"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="false"
            android:layout_alignWithParentIfMissing="false"
            android:layout_below="@+id/password"
            />

        <TextView
            android:id="@+id/Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录"
            android:textColor="@android:color/white"
            android:textSize="16.0sp"
            android:layout_alignParentEnd="true"
            android:onClick="Change"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/password"
            android:layout_marginRight="40dp"
            android:layout_alignParentStart="false"/>

        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="165dp"
            android:text="还没账号？来注册吧>>"
            android:textColor="@android:color/white"
            android:textSize="16.0sp"
            android:layout_marginTop="280dp"
            android:layout_alignParentStart="false"
            android:visibility="gone"
            android:layout_below="@+id/password"
            android:onClick="register"/>

        <TextView
            android:id="@+id/RegisteroReturn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="165dp"
            android:text="进行注册 / 返回登录>>"
            android:textColor="@android:color/white"
            android:textSize="16.0sp"
            android:layout_marginTop="235dp"
            android:layout_alignParentStart="false"
            android:visibility="gone"
            android:onClick="RegisteroReturn"
            android:layout_below="@+id/password2"/>

        <TextView
        android:id="@+id/line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="165dp"
        android:text="                                        "
        android:textColor="@android:color/white"
        android:textSize="16.0sp"
        android:layout_marginTop="-20dp"
        android:layout_alignParentStart="true"
        android:visibility="gone"
        android:layout_below="@+id/register"
        android:background="@drawable/default_line"/>

        <TextView
            android:id="@+id/line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="165dp"
            android:text="                                        "
            android:textColor="@android:color/white"
            android:textSize="16.0sp"
            android:layout_marginTop="-20dp"
            android:layout_alignParentStart="true"
            android:visibility="gone"
            android:layout_below="@+id/RegisteroReturn"
            android:background="@drawable/default_line"/>


    </RelativeLayout>
</LinearLayout>
